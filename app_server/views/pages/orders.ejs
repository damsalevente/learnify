<!DOCTYPE html>
<html>

<head>

  <% include ../partials/head %>
</head>
<header>
  <% include ../partials/header %>
</header>

<body class="float-text blue-grey lighten-4">



  <div class="row">
    <div class="col m12 l9">

      <div class="container">
        <div class="fixed-action-btn">

          <a class="right btn-floating waves-effect waves-light red" href="/order/new"><i class="material-icons">add
            </i></a>
        </div>
        <h2 class="header center">orders</h2>



        <div class="row">
          <% orderlist.forEach((order,index) =>{ %>
          <% if (index%2 === 1){ %>

          <% } %>
          <div class="col m12 l6">
            <div class="card hoverable">

              <div class="card-content">
                <span class="card-title center">
                  <h4 class="header">
                    <%= order.order_status %>
                  </h4>
                </span>
                <p>order address:</p>
                <h5><%= order.place %></h5>
                <p>Order date</p>
                <h5>
                  <%= order.date %>
                </h5>
                <div class="divider"></div>
                <div class="section">
                  <% if(order.product_list.length >= 1){ %>
                  <p> Total Items <br>

                    <%= order.product_list.map(product => product.amount).reduce((x,y) => x+y) %>

                  </p>
                  <% } %>

                </div>

              </div>
              <div class="card-action  light-blue accent-4">
                <a class="waves-effect waves-teal btn deep-orange accent-4" href="/orders/<%= order._id %>">Details</a>
                <a class="modal-trigger right  waves-effect waves-teal btn deep-orange accent-4"
                  href="#modal1">Modal</a>

                <!-- Modal Structure -->
                <div id="modal1" class="modal">
                  <div class="modal-content">
                    <h4>order items</h4>
                    <table>
                      <tr>
                        <th>Név</th>
                        <th>Cikkszám

                        </th>
                        <th> Mennyiség</th>
                      </tr>
                      <% order.product_list.forEach((element) => { %>
                      <tr>
                        <td>

                        </td>
                        <td></td>
                        <td>
                          <%= element.amount %>
                        </td>
                      </tr>
                      <% }) %>
                    </table>
                  </div>
                  <div class="modal-footer">
                    <a href="/orders/<%= order._id %>" class="modal-close waves-effect waves-green btn-flat">Details</a>
                  </div>
                </div>

              </div>
            </div>

          </div>
          <% if (index%2 === 0){ %>

          <% } %>
          <% }); %>
        </div>
      </div>
    </div>
    <div class="col m12 l3">
      <h5 class=flow-text> Chatbox
      </h5>
      <img class="responsive-img materialboxed" src="/images/1538884585245.jpg">


    </div>









  </div>
  </div>

  <% include ../partials/foot %>
  <script>

    document.addEventListener('DOMContentLoaded', function () {
      var elems = document.querySelectorAll('.modal');
      var instances = M.Modal.init(elems);
    });


    $(document).ready(function () {
      $('.collapsible').collapsible();
    });

    $(document).ready(function () {
      $('.materialboxed').materialbox();
    });
  </script>
</body>

</html>