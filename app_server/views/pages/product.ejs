<!DOCTYPE html>
<html>

<head>
    <% include ../partials/head %>
</head>
<header>
    <% include ../partials/header %>
</header>

<body>
    <div class="row" style="font-family: 'IBM Plex Sans', sans-serif">

        <div class="col s9 m9">



            <div class="row">
                <div class="col s12 m8">
                    <div class="card z-depth-2">
                        <div class="card-image">
                            <img src="/images/<%= product.imagefilenames %>">
                          
                            <a class="btn-floating halfway-fab waves-effect"><i class="material-icons">edit</i></a>
                            
                        </div>

                        <div class="card-content">
                                <span class="card-title">
                                        <%= product.name %></span>
                            <div class="divider"></div>
                            <div class="section">
                                    <div class="row">
                                    <div class="col s12 m6">
                                <p>Product name</hp>
                                <h5>
                                    <%= product.name %>
                                </h5>
                            </div>

                                <div class="col s12 m6">
                                        <p>Product id</p>
                                            <h5>
                                                    <%= product.product_id %>
                                            </h5>
                                                
                                    </div>
                            </div>
                            </div>
                            <% if (product.price){ %>
                            <div class="divider"></div>
                            <div class="section">

                                    <p><i class="material-icons">attach_money</i>Price</p>
                               <h5> <%= product.price %> Ft</h5>
                            </div>
                            <% } %>
                            <div class="divider"></div>
                            <div class="section">
                              
                                <p>Description</p>
                                <h5>
                                    <%= product.description %>
                                </h5>
                                <span class="new badge <%= product.amount==0?'red':'blue' %>" data-badge-caption="Raktáron">
                                        <%= product.amount %></span>
                                    </div>
    
                            </div>
                            
                                

                                
                        </div>
                    </div>
                    <div class="col s12 m4">
                        <div class="card">
                            <div class="card-title">
                                Edit
                            </div>

                            <form action="#">
                                <p class="flow-text">

                                    <input name="amount" type="number" id="icon_prefix" value=<%=product.amount %>/>
                                    <label for="amount">Amount</label>
                                </p>
                            </form>

                        </div>
                        <div class="card ">
                            <div class="card-title ">Eladott termékek száma a hónapban?</div>
                        </div>
                        <div class="card ">
                            <div class="card-title">Top partnerek</div>
                        </div>
                        <div class="card ">
                            <div class="card-title">
                                <h5>grafikonok</h5>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="col s3 m3">
                <h4 class=flow-text> Chatbox
                </h4>
                <img class="responsive-img materialboxed" src="/images/1538884585245.jpg">


            </div>









        </div>
    </div>

    <% include ../partials/foot %>
    <script>
        $(document).ready(function () {
            $('.collapsible').collapsible();
        });

        $(document).ready(function () {
            $('.materialboxed').materialbox();
        });
    </script>

</body>

</html>